$homepageHelper = $this->helper('Plumrocket\Amp\Helper\Homepage');
$categories = $homepageHelper->getTopLevelCategories();
$mediaUrl = $homepageHelper->getMediaUrl() . 'catalog/category/';
$defaultImage = $this->getViewFileUrl('Plumrocket_Amp::images/photos/homepage-default.png');
$imageWidth = 380;
$imageHeight = 140;
?>
<?php echo $block->getLayout()->createBlock('Magento\Cms\Block\Block')->setBlockId('amp-home-promotional-msg')->toHtml(); ?>
<?php echo $block->getLayout()->createBlock('Magento\Cms\Block\Block')->setBlockId('amp-home-promotional-banner')->toHtml(); ?>
<div class="col-main">
    <div class="std">
        <div class="amp-cat">
            <?php foreach ($categories as $_category): ?>
                <?php 
                    $ampCategoryImage = $_category->getData('amp_homepage_image');
                    if (!isset($ampCategoryImage)) continue;
                ?>
                <a href="<?php echo $_category->getUrl(); ?>">
                    <span>
                        <?php
            	            $imgUrl = $ampCategoryImage ? $mediaUrl . $ampCategoryImage : $defaultImage;
                            $cropHeight = min($imageWidth / 1.5, $imageHeight);
                            $cropWidth = $cropHeight * 1.5;
                        ?>
                        <amp-img layout="responsive" src="<?php echo  $imgUrl; ?>" alt="test" height="<?php echo $cropHeight; ?>" width="<?php echo $cropWidth; ?>"></amp-img>
                    </span>
                </a>
            <?php endforeach; ?>
        </div>
    </div>
</div>
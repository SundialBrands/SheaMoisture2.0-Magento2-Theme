        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magedelight\Subscribenow\Block\Productsubscription\Profile\View" name="customer_subscription_view" template="customer/subscription/view.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
